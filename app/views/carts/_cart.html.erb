<article>
  <% if notice %>
    <aside id='notice'><%= notice %></aside>
  <% end %>
  <% unless cart.line_items.empty? %>
    <h2> Your Cart </h2>
    <table>
      <%= render(cart.line_items) %>
      <tfoot>
        <tr>
          <th coolspan='2'>Total</th>
          <td class='price'><%= number_to_currency(cart.total_price) %></td>
        </tr>
      </table>
      <div class='actions'>
        <%= button_to 'Empty Cart', cart, method: :delete, data: {confirm: 'Are your sure?'} %>
        <%= button_to 'Checkout', new_order_path, method: :get, class: 'checkout' %>
      </div>
    <% end %>
  </article>
